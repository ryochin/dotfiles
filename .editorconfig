# http://editorconfig.org
root = true

[*]

indent_style = space
indent_size = 2

end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[Makefile*]

indent_style = tab

[*.{md,markdown,html,htm,erb,slim,tx,cfg,eex,yml,yaml}]

trim_trailing_whitespace = false

[*.go]

indent_style = tab

[*.rs]

indent_size = 4
