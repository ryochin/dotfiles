{
  show_readonly => 1,
  # show_tied => 0,
  filters => {
    -external => [ qw(DateTime DB DBIx::Class Digest) ],
    boolean => sub { my $o = shift; sprintf "boolean: %s", $o->isTrue ? "true" : "false" },
    "Path::Class::File" => sub { my $o = shift; sprintf "%s: %s", ref $o, p( $o->stringify ) },
    "SC::Node::Date"    => sub { my $o = shift; sprintf "%s: %s %s", ref $o, $o->ymd("."), $o->hms },
    "JSON::XS::Boolean" => sub { my $o = shift; return sprintf "JSON::XS::Boolean: %s", $o ? 'true' : 'false' },
  },
  datetime => {
    show_class_name => 1,  # default is 0
    show_timezone   => 1,  # default is 1 (only works for DateTime objects)
  }
}

